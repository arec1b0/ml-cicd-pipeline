# Minimal image for the Evidently-based drift monitoring service.
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

COPY requirements.txt /app/requirements.txt
RUN python -m pip install --upgrade pip \
 && pip install --no-cache-dir -r /app/requirements.txt

COPY src /app/src

EXPOSE 9000

ENV DRIFT_EVALUATION_INTERVAL_SECONDS=300

CMD ["uvicorn", "src.drift_monitoring.service:app", "--host", "0.0.0.0", "--port", "9000"]
